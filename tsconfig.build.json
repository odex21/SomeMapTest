{
  "compilerOptions": {
    "resolveJsonModule": true,
    "target": "es2018",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "declaration": true,
    "baseUrl": ".",
    "outDir": "dist",
    "types": [
      "webpack-env",
      "jest"
    ],
    "paths": {},
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost",
      "ES2019.Object"
    ],
  },
  "include": [
    "SomeMap/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}
